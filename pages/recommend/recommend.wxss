/* pages/recommend/recommend.wxss */
.ninthPalace{
  padding: 0rpx;
  margin: 0rpx 8rpx 8rpx 0rpx;
  width: calc(25% - 8rpx);
  padding-bottom:calc(25% - 8rpx);
  position: relative;
}
.ninthPalace image{
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
}
.header .headerImg{
  width: 100%;
  display: block;
}
.headImg {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 26rpx;
  flex-shrink:0;
}
.headImg image{
  width: 100%;
  height: 100%;
  display: block;
}

.postLis{
  background: #fff;
  padding: 20rpx ;
  margin-top:20rpx;
  display: flex;
}
.postLis .center{
  flex-grow:1;
}
.postLis .title{
  display: flex;
  justify-content:space-between;
  margin-top:10rpx;
  font-size: 30rpx;
}
.postLis .describe{
  margin:10rpx 0rpx 40rpx 0rpx;
}
.postLis .imaLis{
  width: 100%;
}
.postLis .single{
  width: 64.2%;
  position: relative;
}
.postLis .single image{
  width: 100%;
  height: auto;
}
.postLis .single .code{
  width: 20%;
  position: absolute;
  bottom: 2%;
  left: 5%;
}
.postLis .media{
  width: calc(100% - 8rpx);
}
.postLis .media video{
  width: 100%;
}
.footr{
  margin-bottom: 30rpx;
  margin-top:26rpx;
  width:100%;
}
.footr .left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.footr .right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
}
.footr .portrait{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin: 4rpx;
}
.footr .preserve{
  padding:13rpx 30rpx;
  border-radius: 35rpx;
  border:1px solid #DD0E2A;
  color: #DD0E2A;
  margin-left: 15rpx;
}
.footr .share{
  padding:13rpx 30rpx;
  border-radius: 35rpx;
  background: #DD0E2A;
  color: #fff;
  margin-left: 15rpx;
  line-height:1.65;
  margin-right:10rpx;
  font-size: 28rpx;
}
.label{
  display: flex; 
  background-color: #fff;
}
.label>view{
  display: flex;
  flex-grow: 1;
  justify-content: center;
  padding:28rpx 0rpx;
  border-bottom:2px solid #fff;
  color: #999;
}
.label>view.select{
  color: #DD0E2A;
  border-bottom: 2px solid #DD0E2A;
}

.weui-grids {
  overflow:hidden;
}
.weui-grid {
  float:left;
  box-sizing:border-box;
  border-right:1rpx solid #d9d9d9;
  border-bottom:1rpx solid #d9d9d9;
}

.c9{
  color: #999;
}
